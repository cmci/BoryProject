			</fileset>
			<manifest>
				<attribute name="Built-By" value="${user.name}" />
			</manifest>
		</jar>
		<copy file="${jarfile}" toDir="${pluginsDir}" />
 		<echo>
 			Copied to ${pluginsDir}
 		</echo>	
		<copy file="${jarfile}" toDir="${FIJIpluginsDir}" />
 		<echo>
 			Copied to ${FIJIpluginsDir}
 		</echo>			
	</target>
</project>